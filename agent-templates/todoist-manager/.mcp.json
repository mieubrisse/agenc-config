{
  "mcpServers": {
    "todoist": {
      "command": "npx",
      "args": [
        "-y",
        "@greirson/mcp-todoist"
      ],
      "env": {
        "TODOIST_API_TOKEN": "${TODOIST_MANAGER_TODOIST_API_TOKEN}"
      }
    },
    "notion": {
      "command": "npx",
      "args": [
        "-y",
        "@mieubrisse/notion-mcp-server"
      ],
      "env": {
        "NOTION_TOKEN": "${TODOIST_MANAGER_NOTION_TOKEN}"
      }
    }
  }
}