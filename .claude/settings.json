{
    "permissions": {
        "allow": [
            "Read(${PWD}/**)",
            "Edit(${PWD}/**)",
            "Write(${PWD}/**)",
            "Glob(${PWD}/**)",
            "Grep(${PWD}/**)",
            "Read(~/.gitconfig)"
        ],
        "deny": [
            "Read(${PWD}/.env)",
            "Read(${PWD}/.env.*)",
            "Read(${PWD}/secrets/**)",
            "Bash(rm -rf:*)",
            "Bash(sudo:*)"
        ],
        "ask": [
            "Bash(git push:*)"
        ]
    }
}
